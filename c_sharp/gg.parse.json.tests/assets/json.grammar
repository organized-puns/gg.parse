/* 
 * Simple EBNF notation for the grammar of json
 */

json				= object | array | eof;

eof					= !.;

key					= string;
value				= string | int | float | boolean | null | object | array;

key_value_pair		= key, -a kv_separator, value;

-r key_value_list	= key_value_pair, *(-a item_separator, key_value_pair);

object				= -a scope_start, ?key_value_list, -a scope_end;

-r array_item_list  = value, *(-a item_separator, value);
array				= -a array_start, ?array_item_list, -a array_end;
