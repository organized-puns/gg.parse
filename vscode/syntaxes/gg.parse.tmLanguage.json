{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "gg.parse.script",
  "scopeName": "source.gg.parse",
  "fileTypes": [
    "grammar",
    "tokens"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#assignment"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#modifiers"
    }
    
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.mycustom",
          "match": "//.*$"
        },
        {
          "name": "comment.block.mycustom",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "assignment": {
      "patterns": [
        {
          "name": "variable.other.gg.parse",
          "match": "[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*=)"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.mycustom",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.mycustom",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.mycustom",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.mycustom",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.gg.parse",
          "match": "\\b(include|if|error)\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.paren.open.gg.parse",
          "match": "\\("
        },
        {
          "name": "punctuation.paren.close.gg.parse",
          "match": "\\)"
        },
        {
          "name": "punctuation.assignment.gg.parse",
          "match": "="
        },
        {
          "name": "punctuation.terminator.gg.parse",
          "match": ";"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.binary.gg.parse",
          "match": "[,|/]"
        },
        {
          "name": "keyword.operator.unary.gg.parse",
          "match": "[!*?+]"
        }
      ]
    },
    "modifiers": {
      "patterns": [
        {
          "name": "keyword.operator.production.gg.parse",
          "match": "[#~]"
        }
      ]
    }
  }
}